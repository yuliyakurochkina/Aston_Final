<resources>

    <style name="Theme.Aston_Final" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="colorPrimary">#A8F279</item>
        <item name="colorPrimaryVariant">#64DD17</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/bright_toxic</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/toxic</item>
        <item name="progressBarStyle">@style/CircularProgress</item>
        <item name="android:statusBarColor">@color/bright_toxic</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/light_toxic</item>
        <item name="colorPrimaryDark">@color/toxic</item>
        <item name="colorAccent">@color/dark</item>
        <item name="android:background">@color/light_toxic</item>
        <item name="android:textColorPrimary">@color/dark</item>
    </style>

    <style name="CheckBoxDialog" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/dark</item>
        <item name="buttonTint">@color/dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RadioBoxDialog" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/dark</item>
        <item name="buttonTint">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextDialog" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextVIewErrorTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextVIewError" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/bright_toxic</item>
        <item name="colorOnPrimary">@color/dark</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/dark</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="LinearLayoutCell" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/toxic</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="LinearLayoutFilterDialog" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/light_toxic</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="DialogBackGround" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/clear</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegularText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FilterButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/bright_toxic</item>
    </style>
</resources>